<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class-"lead">Yelp Camp</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <img class="card-img-top img-responsive" src="<%=campground.image%>">
        <div class="card-block ">
          <div class="caption">
            <h4 class="card-title"><a href="#" class="card-link"><%=campground.name%></a><span class="float-right">9.00/night</span></h4>
            <p> <%- campground.description %> </p>
            <p> 
              <em>Submitted By: <%= campground.author.username %></em>
            </p>
            <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
              <a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground.id %>/edit">Edit</a>
              <form id="delete-form" action="/campgrounds/<%=campground.id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
      <div class="card card-body bg-light">
        <div>
          <div class="text-right">
            <a class = "btn btn-success" href="/campgrounds/<%= campground.id %>/comments/new">Leave a review!</a>
          </div>
          <hr>
            <% campground.comments.forEach(function(comment){ %>
              <div class="row">
                <div class="col-md-12">
                  <strong><%= comment.author.username %></strong>
                  <span class="float-right"> 10 days ago</span>
                  <p>
                    <%= comment.text %>
                  </p>
                </div>
              </div>
            <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>
  
<% include ../partials/footer %>