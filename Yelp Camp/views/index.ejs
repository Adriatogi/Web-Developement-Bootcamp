<% include partials/header %>

<div class="container">
  <header class ="jumbotron">
    <div class="container">
      
      <h1>Welcome to Yelp Camp</h1>
      <p>View our hand-picked campgrounds</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
      </p>
      
    </div>
  </header>
    
  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-6">
        <div class="card">
          <img class="card-img-top img-fluid" src="<%= campground.image %>">
          <h4 class="card-title"><%= campground.name %></h4>
          <p class="card-text">
            <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<% include partials/footer %>
